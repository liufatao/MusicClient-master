<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="appbg">@color/white</item>
        <item name="divider">@color/grey200</item>
        <item name="playBarBackground">@drawable/play_bar_bg_selector</item>
    </style>

    <style name="AppBaseThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@color/grey_900</item>
        <item name="colorAccent">@color/grey_900</item>
        <item name="playBarBackground">@drawable/play_bar_bg_selector_dark</item>
    </style>

    <!-- 应用启动页(StartingWindow)的theme -->
    <style name="AppTheme.StartingWindowTheme" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <!--也可以设置成一张图片 -->
        <item name="android:windowBackground">@drawable/ic_welcome</item>
    </style>

    <attr name="playBarBackground" format="reference" />
    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppThemeDark" parent="AppBaseThemeDark" />

    <style name="AppTheme.Search" parent="AppBaseTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppThemeDark.Search" parent="AppBaseThemeDark">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.Text" parent="TextAppearance.AppCompat" />

    <style name="BiLiPinkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/biliPink</item>
        <item name="colorPrimaryDark">@color/biliPink</item>
        <item name="colorAccent">@color/biliPink</item>
        <item name="image_tint">@color/biliPink</item>
        <item name="press_color">@color/biliPink50</item>
    </style>
    <style name="KuAnGreenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/kuanGreen</item>
        <item name="colorPrimaryDark">@color/kuanGreen</item>
        <item name="colorAccent">@color/kuanGreen</item>
        <item name="image_tint">@color/kuanGreen</item>
        <item name="press_color">@color/kuanGreen50</item>
    </style>
    <style name="ZhiHuBlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/zhihuBlue</item>
        <item name="colorPrimaryDark">@color/zhihuBlue</item>
        <item name="colorAccent">@color/zhihuBlue</item>
        <item name="image_tint">@color/zhihuBlue</item>
        <item name="press_color">@color/zhihuBlue50</item>
    </style>
    <style name="CloudRedTheme" parent="AppTheme">
        <item name="colorPrimary">@color/cloudRed</item>
        <item name="colorPrimaryDark">@color/cloudRed</item>
        <item name="colorAccent">@color/cloudRed</item>
        <item name="image_tint">@color/cloudRed</item>
        <item name="press_color">@color/cloudRed50</item>
    </style>
    <style name="TengLuoPurpleTheme" parent="AppTheme">
        <item name="colorPrimary">@color/tengluoPurple</item>
        <item name="colorPrimaryDark">@color/tengluoPurple</item>
        <item name="colorAccent">@color/tengluoPurple</item>
        <item name="image_tint">@color/tengluoPurple</item>
        <item name="press_color">@color/tengluoPurple50</item>
    </style>
    <style name="SeaBlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/seaBlue</item>
        <item name="colorPrimaryDark">@color/seaBlue</item>
        <item name="colorAccent">@color/seaBlue</item>
        <item name="image_tint">@color/seaBlue</item>
        <item name="press_color">@color/seaBlue50</item>
    </style>
    <style name="GrassGreenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/grassGreen</item>
        <item name="colorPrimaryDark">@color/grassGreen</item>
        <item name="colorAccent">@color/grassGreen</item>
        <item name="image_tint">@color/grassGreen</item>
        <item name="press_color">@color/grassGreen50</item>
    </style>
    <style name="CoffeeBrownTheme" parent="AppTheme">
        <item name="colorPrimary">@color/coffeeBrown</item>
        <item name="colorPrimaryDark">@color/coffeeBrown</item>
        <item name="colorAccent">@color/coffeeBrown</item>
        <item name="image_tint">@color/coffeeBrown</item>
        <item name="press_color">@color/coffeeBrown50</item>
    </style>
    <style name="LemonOrangeTheme" parent="AppTheme">
        <item name="colorPrimary">@color/lemonOrange</item>
        <item name="colorPrimaryDark">@color/lemonOrange</item>
        <item name="colorAccent">@color/lemonOrange</item>
        <item name="image_tint">@color/lemonOrange</item>
        <item name="press_color">@color/lemonOrange50</item>
    </style>
    <style name="StartSkyGrayTheme" parent="AppTheme">
        <item name="colorPrimary">@color/startSkyGray</item>
        <item name="colorPrimaryDark">@color/startSkyGray</item>
        <item name="colorAccent">@color/startSkyGray</item>
        <item name="image_tint">@color/startSkyGray</item>
        <item name="press_color">@color/startSkyGray50</item>
    </style>
    <!--<style name="NightModeTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="NightModeTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/nightActionbar</item>
        <item name="colorPrimaryDark">@color/nightActionbar</item>
        <item name="colorAccent">@color/biliPink</item>
        <item name="image_tint">@android:color/white</item>
        <item name="appbg">@color/nightBg</item>
        <item name="divider">@color/nightActionbar</item>
        <item name="press_color">@color/biliPink50</item>
        <!--<item name="my_selector_layout">@drawable/selector_layout</item>-->
        <item name="play_bar_color">@color/nightActionbar</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="text_color">@color/colorWhite</item>
        <item name="android:windowBackground">@color/nightBg</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
       <!--播放条背景 -->
        <item name="playBarBackground">@drawable/play_bar_bg_selector_dark</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/nightBg</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="pop_window_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>

    <style name="PlaylistActivityTheme" parent="AppTheme">
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>


</resources>
