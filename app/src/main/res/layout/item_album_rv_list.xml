<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_album"
        android:layout_width="@dimen/dp_50"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_user" />

    <LinearLayout
        android:id="@+id/ly_music_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_albumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/i_1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="@integer/i_1"
            android:text="albumName"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_music_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="@integer/i_1"
            android:text="singer name "
            android:textColor="@color/grey700"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:layout_weight="@integer/i_0"
            android:background="@color/colorDividerGray"></View>

    </LinearLayout>

</LinearLayout>
